<h1>The Record Shop</h1>

<table>
  <tr>
    <th>name</th>
  </tr>
  <% for artist in @artists %>
  <tr>
    <td><a href="/artists/<%= artist.id %>"><%= artist.name %></a></td>
  </tr>
  <% end %>
</table>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th>Quantity</th>
  </tr>
  <% for album in @albums %>
  <tr>
    <td><a href="/albums/<%= album.id %>"><%= album.name %></a></td>
    <td></td>
    <td><%= album.stock_level %></td>
    <td><%= album.quantity %></td>
  </tr>
  <%end%>
</table>
